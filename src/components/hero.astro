---
import { Picture } from "astro:assets";
import heroImage from "assets/hero.png";
import Link from "@components/ui/link.astro";
import { Icon } from "astro-icon/components";
---

<main
  class="grid lg:grid-cols-2 place-items-center pt-16 pb-8 md:pt-12 md:pb-24 animate-fade-up animate-duration-1000 animate-ease-in">
  <div class="py-6 md:order-1 hidden md:block animate-wiggle animate-infinite animate-duration-[600ms] animate-ease-in-out">
    <Picture
      src={heroImage}
      alt="Astronaut in the air"
      widths={[200, 400, 600]}
      sizes="(max-width: 800px) 100vw, 620px"
      loading="eager"
      format="avif"
    />
  </div>
  <div>
    <h1
      class="text-xl lg:text-6xl xl:text-7xl font-bold lg:tracking-tight xl:tracking-tighter ">
      Build, Market, Thrive:Comprehensive <span class="text-primary "
        >Solutions</span
      > for Your Online Success
    </h1>
    <p class="text-lg mt-4 text-slate-600 max-w-xl">
      <span class="text-primary">Code Thousand</span> is your partner in building a strong online presence. We
      provide comprehensive web development and marketing services designed to
      help your business thrive. From creating user-friendly, SEO-optimized
      websites to implementing effective marketing strategies, we have the
      expertise to boost your brand and drive sustainable growth.
    </p>
    <div class="mt-6 flex flex-col sm:flex-row gap-3 ">
      <Link
        href="#"
        href="https://web3templates.com/templates/astroship-starter-website-template-for-astro"
        target="_blank"
        class="flex gap-1 items-center justify-center bg-primary hover:scale-110 duration-500 ease-in-out"
        rel="noopener">

        ðŸ“§ Contact US
      </Link>
    </div>
  </div>
</main>
